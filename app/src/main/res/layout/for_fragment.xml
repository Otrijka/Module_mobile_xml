<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".IfOperatorFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/for_block"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/iteratorNameInput"
                    android:layout_width="wrap_content"
                    android:hint="Переменная"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textVisiblePassword"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/conditionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/conditionValueInput"
                    android:layout_width="wrap_content"
                    android:hint="Число"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="textVisiblePassword"
                    android:textAlignment="center" />

            </LinearLayout>

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/startValueInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:hint="Начально значение"
                android:inputType="textVisiblePassword"
                android:padding="2dp"
                android:textAlignment="center" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/stepInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_border"
                android:hint="Шаг"
                android:inputType="textVisiblePassword"
                android:padding="2dp"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:id="@+id/createBlockButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button_color"
            android:text="@string/make_block_button_text"
            android:textAllCaps="false"
            android:textSize="@dimen/normal_text_size" />


    </LinearLayout>
</FrameLayout>